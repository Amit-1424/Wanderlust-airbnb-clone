<% layout("/layouts/boilerplate") %>

<div class="container mt-4 form-container">
    <h3 class="mb-4">Edit Listing</h3>

    <form 
    method="POST" 
    action="/listings/<%= listing._id %>?_method=PUT"
    class="needs-validation"
    novalidate
>

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input 
            name="listing[title]" 
            type="text" 
            class="form-control"
            value="<%= listing.title %>" 
            required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a title.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea 
            name="listing[description]" 
            class="form-control"
            rows="3"
            required
        ><%= listing.description %></textarea>
        <div class="valid-feedback">Nice description!</div>
        <div class="invalid-feedback">Description is required.</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input 
            name="listing[image][url]" 
            type="url"
            class="form-control"
            value="<%= listing.image?.url %>" 
            required
        />
        <div class="valid-feedback">Valid URL!</div>
        <div class="invalid-feedback">Please enter a valid image URL.</div>
    </div>

    <div class="row">
        <div class="mb-3 col-md-6">
            <label class="form-label">Price</label>
            <input 
                name="listing[price]" 
                type="number" 
                class="form-control"
                value="<%= listing.price %>" 
                required
                min="1"
            />
            <div class="valid-feedback">Price looks good.</div>
            <div class="invalid-feedback">Enter a valid price.</div>
        </div>

        <div class="mb-3 col-md-6">
            <label class="form-label">Country</label>
            <input 
                name="listing[country]" 
                type="text" 
                class="form-control"
                value="<%= listing.country %>" 
                required
            />
            <div class="valid-feedback">Nice!</div>
            <div class="invalid-feedback">Country is required.</div>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Location</label>
        <input 
            name="listing[location]" 
            type="text" 
            class="form-control"
            value="<%= listing.location %>" 
            required
        />
        <div class="valid-feedback">Looks correct.</div>
        <div class="invalid-feedback">Location is required.</div>
    </div>

    <button class="btn btn-dark w-100">Update Listing</button>
</form>
</div>